@model DI.Reminder.Common.CategoryModel.CategoriesModel

@{
    ViewBag.Title = "Delete";
}
<link href="~/Content/RegistrationSheet.css" rel="stylesheet" />
<h3 class="title">Are you sure you want to delete this?</h3>
<div>
    <dl>
        <dt class="title">
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd class="boton1">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="title">
            @Html.DisplayNameFor(model => model.ParentCategory)
        </dt>
        @if (Model.ParentCategory == null)
        {
        <dd class="boton1"> It is root category</dd>
        }
        else
        {<dd class="boton1">
            @Html.DisplayFor(model => model.ParentCategory)
        </dd>}

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="button" /> 
        </div>
    }
</div>
