@model DI.Reminder.Common.CategoryModel.Category

@{
    ViewBag.Title = "Delete";

    Layout = "~/Views/Shared/_LayoutForPages.cshtml";
}
<div class="container padding-top-120">
    <div class="row padding-top-45">
        <h2 class="title" style="padding-bottom:30px;">Are you sure you want to delete this category?</h2>
        <div class="col-md-4 col-lg-4 col-xs-4 col-sm-4">
            @Html.HiddenFor(model => model.ID)
            <div class="padding-top-20 ">
                <h3>
                    @Html.LabelFor(model => model.Name)
                </h3>

                <h4 class="padding-top-30">
                    @Html.DisplayFor(model => model.Name)
                </h4>
            </div>
            <div class="padding-top-20 ">
                <h3>
                    @Html.Label("Parent category")
                </h3>

                <h4 class="padding-top-30">
                    @if (Model.ParentCategory == null)
            {
                <span> It is root category</span>
    }
    else
    {
        @Html.DisplayFor(model => model.ParentCategory.Name)
}
                </h4>
            </div>
            @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="padding-top-90">
            <div>
                <h4>
                    <input type="submit" style="text-decoration:none; width:100%;" class="btn" value="Delete category" />
                </h4>
            </div>
        </div>
}
        </div>
    </div>
</div>
