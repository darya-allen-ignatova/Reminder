@model IEnumerable<DI.Reminder.Common.CategoryModel.CategoriesModel>

@{
    ViewBag.Title = "ShowAll";
    Layout = "~/Views/Shared/_LayoutForPages.cshtml";
}
<h2 class="title">All categories</h2>
<div class="container padding-top-120">
    <div class="row">
        <div class="padding-top-20 ">
            <div class="col-md-4 col-lg-4 col-xs-4 col-sm-4">
                <h3>
                    @Html.Label("Name")
                </h3>
            </div>
            <div class="col-md-4 col-lg-4 col-xs-4 col-sm-4">
                <h3>
                    @Html.Label("Parent category")
                </h3>
            </div>
        </div>
    </div>
    @foreach (var item in Model)
    {<div class="row">
            <div></div>
            <div class="col-md-4 col-lg-4 col-xs-4 col-sm-4">
                <h4 class="padding-top-30">
                    @Html.DisplayFor(modelItem => item.Name)
                </h4>
            </div>
            <div class="col-md-4 col-lg-4 col-xs-4 col-sm-4">
                <h4 class="padding-top-30">
                    @if (item.ParentCategory == null)
                    {
                        <span> It is root category</span>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.ParentCategory)
                    }


                </h4>

            </div>

            <div class="col-md-4 col-lg-4 col-xs-4 col-sm-4" style="padding-top:40px; font-size:large">

                @Html.ActionLink("Edit", "Edit", new { id = item.ID })


                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </div>
        </div>
}


    <div class="padding-top-90">
        <div>
            <h4>
                <a type="button" href="/Category/Add" style="text-decoration:none; width:100%;" class="btn">Add new category</a>
            </h4>
        </div>
    </div>
    </div>



