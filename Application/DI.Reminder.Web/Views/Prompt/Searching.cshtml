@model DI.Reminder.Web.Models.SearchModel

@{
    ViewBag.Title = "Searching";
}
<link href="~/Content/RegistrationSheet.css" rel="stylesheet" />

<h2 class="title" >Search</h2>
<div style="width:30%; float:left">
    <div>
        @Html.LabelFor(model => model.Prompt.Name, htmlAttributes: new { @class = "boton1" })
        <div>
            @Html.EditorFor(model => model.Prompt.Name, new { htmlAttributes = new { @class = "input prompt" } })
            
        </div>
    </div>
     <div>
        @Html.LabelFor(model => model.Prompt.Category.Name, "Category", htmlAttributes: new { @class = "boton1" })
        <div>
            @Html.DropDownListFor(model => model.Prompt.Category.Name, Model.Categories,  htmlAttributes: new {@class= "category", @style = " width: 325px; height: 48px; border: 1px solid rgba(255, 255, 255, .4);border - radius: 4px; background - clip: padding - box;display: block;font - family: 'Open Sans', sans - serif; font - size: 40px; font - weight: 400; background - color: white;color: #855C6A;margin-left: 18px; margin-bottom:10px;margin-top:10px;padding:0px 10px 20px  10px;" })
            
        </div>
    </div>
    <div>
        @Html.LabelFor(model => model.Prompt.Date, htmlAttributes: new { @class = "boton1" })
        <div>
            @Html.EditorFor(model => model.Prompt.Date, new { htmlAttributes = new { @class = "input date" } })
        </div>
    </div>
    <div>
        <input type="submit" value="Search" class="button" id="search"/>
    </div>
</div>
<div style="width:68%; float:right">
    <div style=" width:100%; height:200px;overflow-y:auto;">
        <div id="JSON" style="margin-top:50px" class="boton15">
        </div>
    </div>
</div>