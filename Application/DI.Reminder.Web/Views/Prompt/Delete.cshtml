@model DI.Reminder.Common.PromptModel.Prompt

@{
    ViewBag.Title = "Delete";

    Layout = "~/Views/Shared/_LayoutForPages.cshtml";
}

<h2 class="title">Delete</h2>
<div class="container padding-top-90">
    <div class="row ">
        <h2 class="title" style="padding-bottom:30px;">Are you sure you want to delete this prompt?</h2>
        <div class="col-md-6 col-lg-6 col-xs-6 col-sm-6">

            <div class="padding-top-20 ">
                <h3>
                    @Html.LabelFor(model => model.Name)
                </h3>

                <h4 class="padding-top-30">
                    @Html.DisplayFor(model => model.Name)
                </h4>
            </div>
            <div class="padding-top-20 ">
                <h3>
                    @Html.LabelFor(model => model.Date)
                </h3>

                <h4 class="padding-top-30">
                    @Html.DisplayFor(model => model.Date)
                </h4>
            </div>
            <div class="padding-top-20 ">
                <h3>
                    @Html.LabelFor(model => model.Description)
                </h3>

                <h4 class="padding-top-30">
                    @Html.DisplayFor(model => model.Description)
                </h4>
            </div>
            <div class="padding-top-20 ">
                <h3>
                    @Html.Label("Category")
                </h3>

                <h4 class="padding-top-30">
                    @Html.DisplayFor(model => model.Category.Name)
                </h4>
            </div>

        </div>
        <div class="col-md-6 col-lg-6 col-xs-6 col-sm-6">
            <div class="padding-top-20 ">
                <h3>
                    @Html.Label("Time of prompt")
                </h3>

                <h4 class="padding-top-30">
                    @Html.DisplayFor(model => model.TimeOfPrompt)
                </h4>
            </div>

            <div class="padding-top-20 ">
                <h3>
                    @Html.Label(" Image")
                </h3>

                <h4 class="padding-top-30">
                    <img style="width:500px; height:300px; margin:2px" ; src="@Url.Content(Model.Image)" />
                </h4>
            </div>
        </div>
    </div>
        <div class="row padding-top-45">
            <div class="col-md-6 col-lg-6 col-xs-6 col-sm-6">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div >
                        <div>
                            <h4>
                                <input type="submit" style="text-decoration:none; width:100%;" class="btn" value="Delete prompt" />
                            </h4>
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-6 col-lg-6 col-xs-6 col-sm-6">
                <div >
                    <div>
                        <h4>
                            <a type="button" href="/Prompt/Navigation" style="text-decoration:none; width:100%;" class="btn">Back to list</a>
                        </h4>
                    </div>
                </div>
            </div>
        </div>
    
</div>

