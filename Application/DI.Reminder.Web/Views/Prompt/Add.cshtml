@model DI.Reminder.Common.PromptModel.Prompt

@{
    ViewBag.Title = "Add";
}
<link href="~/Content/RegistrationSheet.css" rel="stylesheet" />
<h2 class="title">Add</h2>

@using (Html.BeginForm())
{
            @Html.AntiForgeryToken()

            <div style="width:45%; float:left">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div>
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "boton1" })
                    <div>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "input" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div>
                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "boton1" })
                    <div>
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "input" } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div>
                    @Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "boton1" })
                    <div>
                        @Html.EditorFor(model => model.Category, new { htmlAttributes = new { @class = "input" } })
                        @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div>
                    @Html.LabelFor(model => model.TimeOfPrompt, htmlAttributes: new { @class = "boton1" })
                    <div>
                        @Html.EditorFor(model => model.TimeOfPrompt, new { htmlAttributes = new { @class = "input" } })
                        @Html.ValidationMessageFor(model => model.TimeOfPrompt, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div>
                    <div class="boton1">
                        Input image path
                    </div>
                    <div>
                        <input class="input" type="file" name="Image" accept="image/jpeg, image/png" />
                        @Html.ValidationMessageFor(model => model.TimeOfPrompt, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div>
                    <div>
                        <input type="submit" value="Create" class="button" />
                    </div>
                </div>
                <div class="boton1">
                    @Html.ActionLink("Back to List", "ShowCategoryList", "Prompt")
                </div>
            </div>
        

<div style="width:45%; float:right">
    <div class="boton1">
        Actions
    </div>
    <div id="textBox">

    </div>
    <input value="Add" type="button" class="button" id="AddingButton" />
</div>

}