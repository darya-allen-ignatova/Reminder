@model IEnumerable<DI.Reminder.Common.ServiceModel.ServiceItem>
@{
    Layout = null;
}
<div class="container padding-top-30">
    <div class="row">
        <div class="text-center" style="padding-bottom:30px;">
            @if (ViewBag.Flag != true)
            {
                <div>
                    <div>

                        <h5>
                            Enjoy this amazing books. Pleasant reading
                        </h5>

                    </div>
                    <div style="color:grey; font-size:smaller">

                        Thanks to advertisement out site exists. Please, disable all blocks of advertisement
                    </div>
                </div>
            }
            @foreach (var item in Model)
            {

                if (item.ID == 0)
                {
                    <div class="text-center">
                        <h5>@item.Title</h5>
                        <img style="width:340px; height:225px" ; class="padding-top-20" src="@item.Image" />
                    </div>
                }
                else
                {<div class="col-md-4 text-center padding-top-30">
                        <a href="@item.Url">
                            <img style="width:140px; height:200px" ; src="@item.Image" />
                        </a>
                    </div>
                }
            }
        </div>

    </div>
</div>


