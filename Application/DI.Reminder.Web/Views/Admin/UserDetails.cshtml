@model DI.Reminder.Common.LoginModels.Account

@{
    ViewBag.Title = "UserDetails";
}
<link href="~/Content/RegistrationSheet.css" rel="stylesheet" />
<h2 class="title">UserDetails</h2>
<div>
    <div style="width:45%; float:left">
        <dl class="dl-horizontal">
            <dt class="title">
                @Html.DisplayNameFor(model => model.Login)
            </dt>

            <dd class="boton1">
                @Html.DisplayFor(model => model.Login)
            </dd>

            <dt class="title">
                @Html.DisplayNameFor(model => model.Email)
            </dt>

            <dd class="boton1">
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt class="title">
                @Html.DisplayNameFor(model => model.Password)
            </dt>

            <dd class="boton1">
                @Html.DisplayFor(model => model.Password)
            </dd>


        </dl>
        <p style="margin-top:30px;color: #855C6A;font-family: ‘Rouge Script’, cursive; font-size: 200%; margin-left:10px">
            @Html.ActionLink("Edit", "EditUser", new { id = Model.ID }) |
            @Html.ActionLink("Back to List", "UserList")
        </p>
    </div>
    <div style="width:45%; float:right">
        <div class="title">
            Role
        </div>

        <div class="boton1">
            @Html.DisplayFor(model => model.Roles[0].Name)
        </div>
    </div>
</div>