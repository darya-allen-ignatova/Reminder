@model DI.Reminder.Common.LoginModels.Account

@{
    ViewBag.Title = "DeleteUser";
}
<link href="~/Content/RegistrationSheet.css" rel="stylesheet" />
<h2 class="title">Are you sure you want to delete this?</h2>
<div style="width:45%; float:left">
    <dl>
        <dt class="newtitle">
            @Html.DisplayNameFor(model => model.Login)
        </dt>

        <dd class="boton1">
            @Html.DisplayFor(model => model.Login)
        </dd>

        <dt class="newtitle">
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd class="boton1">
            @Html.DisplayFor(model => model.Email)
        </dd>

        

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div>
            <input type="submit" value="Delete" class="button" /> 
        </div>
    }
</div>
<div style="width:45%; float:right">
    <div class="newtitle">Roles</div>
    @if (Model.Roles.Count != 0)
    {
        foreach (var m in Model.Roles)
        {
    <div class="boton1">
            @Html.DisplayFor(model => m.Name)
    </div>
        }
    }
    else
    {
        <div class="boton2">
            There aren't any Roles
        </div>
    }
</div>
